{% extends 'base.html.twig' %}

{% block title %}Confirmation de Réservation{% endblock %}

{% block body %}
<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<div class="hero hero-inner">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 mx-auto text-center">
					<div class="intro-wrap">
						<h1 class="mb-0">Confirmation de paiement</h1>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="untree_co-section">
		<div class="container">
			<div class="row mb-5 mx-auto text-center">
				<div class="col-lg-6 text-center">
                    <div class="alert alert-success" role="alert">
                    Votre paiement a été effectué avec succès !
                    </div>
                    <p>Votre réservation pour le logement "{{ rent.house.title }}" a été confirmée.</p>
                    <p>Numéro de réservation: {{ rent.id }}</p>
                    <p>Numéro de transaction: {{ transactionId }}</p>
                <div class="mt-4">
                    <a href="{{ path('app_accueil') }}" class="btn btn-primary">Retour à la page d'accueil</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

