{% extends 'base.html.twig' %}

{% block title %}Hello RentController!
{% endblock %}

{% block body %}

	<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<div class="hero hero-inner">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 mx-auto text-center">
					<div class="intro-wrap">
						<h1 class="mb-0">Historique des Réservations Payées</h1>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="untree_co-section">
		<div class="container">
			<div class="row mb-5 justify-content-center">
				<div class="col-lg-6 text-center">
					<h2>Historique des Réservations Payées</h2>
					<table>
						<thead>
							<tr>
								<th>Date de Début</th>
								<th>Nombre de Jours</th>
								<th>Prix Total</th>
								<!-- Ajoutez d'autres colonnes selon vos besoins -->
							</tr>
						</thead>
						<tbody>
							{% for rent in paidRents %}
								<tr>
									<td>{{ rent.startDate|date('Y-m-d') }}</td>
									<td>{{ rent.numDays }}</td>
									<td>{{ rent.totalPrice }}</td>
									<!-- Affichez d'autres propriétés de rent selon vos besoins -->
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
