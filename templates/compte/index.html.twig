{% extends 'base.html.twig' %}

{% block title %}Compte user locataire
{% endblock %}

{% block body %}
	<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<div class="hero hero-inner">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 mx-auto text-center">
					<div class="intro-wrap">
						<h1 class="mb-0">Compte</h1>
						<p class="text-white">"Explorez le confort ultime avec nos locations de cabanes exceptionnelles. Des expériences uniques vous attendent, où le luxe rencontre la sérénité. Réservez votre escapade parfaite dès maintenant."
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="untree_co-section">
		<div class="container">
			<div class="row d-flex justify-content-center">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<h1>Vos Informations</h1>
						</div>
					</div>
					<div class="row">
						<div class="col-md-8">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-8">
											<p>Username :</p>
											{{ app.user.username }}
										</div>
										<div class="col-md-4 text-md-right">
											<a href="{{ path('app_edit_user', { 'id': app.user.id }) }}" class="btn btn-primary">Modifier</a>
											<a href="{{ path('app_delete_user', { 'id': app.user.id }) }}" class="btn btn-danger" onclick="return confirm('Attention vous êtes entrain de supprimer votre compte')">Supprimer</a>
										</div>

									</div>
									<div class="row mt-3">
										<div class="col-md-8">
											<p>Email :</p>
											{{ app.user.email }}
										</div>

									</div>
									<div class="col-md-4 text-md-right">
										<a href="{{ path('app_historique') }}" class="btn btn-info">Historique de location</a>
										<!-- Assurez-vous de remplacer 'route_historique_location' par le nom de votre route réelle -->
									</div>

								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>


{% endblock %}
