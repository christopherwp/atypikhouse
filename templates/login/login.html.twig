{% extends 'base.html.twig' %}

{% block title %}Se connecter!
{% endblock %}

{% block body %}

	<div class="background-color-header"></div>
	<!-- Div pour l'arrière-plan de couleur -->
	<div class="untree_co-section">
		<div class="container">
			<div class="row d-flex justify-content-center">
				<div class="card-info ">
					<div class="content">
						<form method="post" class="form-signin">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									Vous êtes connecté en tant que
									{{ app.user.userIdentifier }},
									<a href="{{ path('app_logout') }}">Se déconnecter</a>
								</div>
							{% endif %}

							<p class="heading">Connexion</p>
							<label for="username" class="sr-only">Email</label>
							<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" placeholder="Email" autocomplete="email" required autofocus>
							<label for="password" class="sr-only">Mot de passe</label>
							<input type="password" name="_password" id="password" class="form-control mb-3" placeholder="Mot de passe" autocomplete="current-password" required>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


							<button class="btn btn-lg btn-primary btn-block mt-4" type="submit">
								Se connecter
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block stylesheets %}
	<style>
		.background-color-header {
			background-color: transparent;
			height: 200px; /* Ajustez la hauteur selon vos besoins */
			width: 100%; /* Assurez-vous que la couleur de fond occupe toute la largeur de la page */
		}

		.card-info {
			position: relative;
			display: flex;
			align-items: center;
			justify-content: center;
			width: 370px;
			padding: 36px;
			border-radius: 24px;
			overflow: hidden;
			line-height: 1.5;
			border: 1px solid #CCCCCC;

		}

		.content .heading {
			font-weight: 700;
			font-size: 36px;
			line-height: 1.3;
			z-index: 1;
			transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
		}
	</style>
{% endblock %}
