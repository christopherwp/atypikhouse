{% extends 'base.html.twig' %}

{% block title %}
	Paiement
{% endblock %}

{% block body %}

	<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<div class="hero hero-inner">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 mx-auto text-center">
					<div class="intro-wrap">
						<h1 class="mb-0">Paiement</h1>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="untree_co-section">
		<div class="container">
			<div class="row mb-5 justify-content-center">
				<div class="col-lg-6 text-center">
					<h2 class="section-title text-center mb-3">Ma réservation
					</h2>
					{% for message in app.flashes('error') %}
						<div class="alert alert-danger">{{ message }}</div>
					{% endfor %}
					<form class="text-center" action="{{ path('app_payer') }}" method="post">
						<div class="form-floating">
							<input type="text" name="numCarte" placeholder="Numéro de carte">
						</div>
						<div class="form-floating">
							<input type="text" name="cvc" placeholder="CVC">
						</div>
						<div class="form-floating">
							<input type="text" name="dateExp" placeholder="Date d'expiration">
						</div>
						<div class="form-floating">
							<button type="submit">Payer</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
