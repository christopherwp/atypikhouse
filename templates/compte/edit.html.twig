{% extends 'base.html.twig' %}

{% block title %}Compte edite
{% endblock %}

{% block body %}
	<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<div class="hero hero-inner">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 mx-auto text-center">
					<div class="intro-wrap">
						<h1 class="mb-0">Compte</h1>
						<p class="text-white">"Explorez le confort ultime avec nos locations de cabanes exceptionnelles. Des expériences uniques vous attendent, où le luxe rencontre la sérénité. Réservez votre escapade parfaite dès maintenant."
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="untree_co-section">
		<div class="container">
			<div class="row d-flex justify-content-center">
                
                <div class="col-12">
                    <h1>Vos Informations à editées</h1>
                </div>
			  
              {% for flash_error in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}
    
   {{ form_errors(CompteForm) }}

                   

  {{ form_errors(CompteForm) }}

{{ form_start(CompteForm, {'attr': {'class': 'form'}}) }}
  <div class="form-group">
    {{ form_row(CompteForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
  </div>
  <div class="form-group">
    {{ form_row(CompteForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
  </div>
  {% set currentRoute = app.request.attributes.get('_route') %}
  {% if currentRoute == 'app_register_toto' %}
    <div class="form-group">
      {{ form_row(CompteForm.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Telephone'}}) }}
    </div>
    <div class="form-group">
      {{ form_row(CompteForm.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
    </div>
    <div class="form-group">
      {{ form_row(CompteForm.numCarteIdentite, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de Carte d\'Identité'}}) }}
    </div>
  {% endif %}
  <div class="form-group">
    {{ form_row(CompteForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
  </div>
  <button type="submit" class="btn btn-primary">Editer</button>
{{ form_end(CompteForm) }}










		









            </div>
        </div>
	</div>

{% endblock %}
