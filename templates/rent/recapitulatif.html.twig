{% extends 'base.html.twig' %}

{% block title %}Hello RentController!{% endblock %}

{% block body %}

	<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<div class="hero hero-inner">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 mx-auto text-center">
					<div class="intro-wrap">
						<h1 class="mb-0">Récapitulatif de réservation</h1>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="untree_co-section">
		<div class="container">
			<div class="row mb-5 justify-content-center">
				<div class="col-lg-6 text-center">
					<h2 class="section-title text-center mb-3">Votre réservation
					</h2>
					<p>Logement : {{ house.title }}</p>
					<p>Du {{ rent.startDate|date('d/m/Y') }} au {{ rent.endDate|date('d/m/Y') }}</p>
    				<p>Prix total : {{ rent.totalPrice }} €</p>
					<form action="{{ path('app_payer') }}" method="post" class="text-center">
        				<input type="hidden" name="rentId" value="{{ rent.id }}">
       		 			<button type="submit" class="btn btn-primary">Payer</button>
    				</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
