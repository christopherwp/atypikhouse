{% extends 'base.html.twig' %}

{% block title %}House
{% endblock %}

{% block body %}
	<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<div class="hero hero-inner">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 mx-auto text-center">
					<div class="intro-wrap">
						<h1 class="mb-0">{{ house.title }}</h1>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="untree_co-section">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-8 col-md-10 col-sm-12 card-info ">
				<div class="content">
					<p class="heading">Mon logement</p>
					<table class="table">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ house.id }}</td>
							</tr>
							<tr>
								<th>Title</th>
								<td>{{ house.title }}</td>
							</tr>
							<tr>
								<th>Latitude</th>
								<td>{{ house.latitude }}</td>
							</tr>
							<tr>
								<th>Longitude</th>
								<td>{{ house.longitude }}</td>
							</tr>
							<tr>
								<th>Address</th>
								<td>{{ house.address }}</td>
							</tr>
							<tr>
								<th>Capacity</th>
								<td>{{ house.capacity }}</td>
							</tr>
							<tr>
								<th>Num_rooms</th>
								<td>{{ house.numRooms }}</td>
							</tr>
							<tr>
								<th>Num_bedrooms</th>
								<td>{{ house.numBedrooms }}</td>
							</tr>
							<tr>
								<th>Num_bathrooms</th>
								<td>{{ house.numBathrooms }}</td>
							</tr>
							<tr>
								<th>Daily_price</th>
								<td>{{ house.dailyPrice }}</td>
							</tr>
							<tr>
								<th>Description</th>
								<td>{{ house.description }}</td>
							</tr>
						</tbody>
					</table>
                    <br>
					<div class="button-container d-flex justify-content-between">
						<a href="{{ path('app_proprio_edit', {'id': house.id}) }}" class="btn btn-primary">Editer</a>
						<button href="'app_proprio_delete'" class="btn-del" onclick="return confirm('Attention : vous êtes sûr de vouloir supprimer ce logement ?')">
							<svg viewbox="0 0 448 512" class="svgIcon">
								<path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"></path>
							</svg>
						</button>
						{{ include('proprietaire/_delete_form.html.twig') }}
					</div>
					{#<a href="{{ path('app_facility_new',{'id': house.id}) }}">Créer logement</a> #}
				</div>
			</div>
		</div>
		<br>
		<br>
		<div class="col-lg-8 col-md-10 col-sm-12">
			<div class="text-right">
				<a href="{{ path('app_proprio_index') }}">
					<svg height="16" width="16" xmlns="http://www.w3.org/2000/svg" version="1.1" viewbox="0 0 1024 1024">
						<path d="M874.690416 495.52477c0 11.2973-9.168824 20.466124-20.466124 20.466124l-604.773963 0 188.083679 188.083679c7.992021 7.992021 7.992021 20.947078 0 28.939099-4.001127 3.990894-9.240455 5.996574-14.46955 5.996574-5.239328 0-10.478655-1.995447-14.479783-5.996574l-223.00912-223.00912c-3.837398-3.837398-5.996574-9.046027-5.996574-14.46955 0-5.433756 2.159176-10.632151 5.996574-14.46955l223.019353-223.029586c7.992021-7.992021 20.957311-7.992021 28.949332 0 7.992021 8.002254 7.992021 20.957311 0 28.949332l-188.073446 188.073446 604.753497 0C865.521592 475.058646 874.690416 484.217237 874.690416 495.52477z"></path>
					</svg>Retour à la liste</a>
			</div>
		</div>
	</div>
</div>


{% block stylesheets %}
	<style>
		.card-info {
			position: relative;
			display: flex;
			align-items: center;
			flex-direction: column;
			width: 370px;
			padding: 36px;
			border-radius: 24px;
			overflow: hidden;
			line-height: 1.5;
			border: 1px solid #CCCCCC;
			background: #FFFFFF;
		}

		.content .heading {
			font-weight: 700;
			font-size: 36px;
			line-height: 1.3;
			z-index: 1;
			transition: all 0.48s cubic-bezier(0.23, 1, 0.32, 1);
		}


		.btn-del {
			width: 50px;
			height: 50px;
			border-radius: 50%;
			background-color: grey;
			border: none;
			font-weight: 600;
			display: flex;
			align-items: center;
			justify-content: center;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.164);
			cursor: pointer;
			transition-duration: 0.3s;
			overflow: hidden;
			position: relative;
		}

		.svgIcon {
			width: 12px;
			transition-duration: 0.3s;
		}

		.svgIcon path {
			fill: white;
		}

		.btn-del:hover {
			width: 100px;
			border-radius: 50px;
			transition-duration: 0.3s;
			background-color: rgb(255, 69, 69);
			align-items: center;
		}

		.btn-del:hover .svgIcon {
			width: 50px;
			transition-duration: 0.3s;
			transform: translateY(60%);
		}

		.btn-del::before {
			position: absolute;
			top: -20px;
			content: "Delete";
			color: white;
			transition-duration: 0.3s;
			font-size: 2px;
		}

		.btn-del:hover::before {
			font-size: 13px;
			opacity: 1;
			transform: translateY(30px);
			transition-duration: 0.3s;
		}
	</style>
{% endblock %}{% endblock %}
